@model IEnumerable<WebApp_Biblioteca.Models.EntidadesBiblioteca.SP_S_Preguntas_Result>

@{
    ViewBag.Title = "ListaPreguntas";
}

<h2>ListaPreguntas</h2>

<p>
    @Html.ActionLink("Agregar nueva pregunta", "CrearPregunta")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idPregunta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipoDeDato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.respuestas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaCreacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idPregunta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoDeDato)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.respuestas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaCreacion)
        </td>
        <td>
            @Html.ActionLink("Borrar", "BorrarPregunta", new { idPregunta=item.idPregunta  })
        </td>
    </tr>
}

</table>
